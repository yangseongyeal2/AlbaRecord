                android:layout_width="150dp"
                android:layout_height="22dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/grayedgebox"
                app:layout_constraintStart_toStartOf="@+id/address"
                app:layout_constraintTop_toBottomOf="@+id/seteducation" />

            <Button
                android:id="@+id/setAccount"
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/graybox"
                android:text="변경"
                app:layout_constraintEnd_toEndOf="@+id/education"
                app:layout_constraintTop_toBottomOf="@+id/account_text" />


